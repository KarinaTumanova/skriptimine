#!/bin/bash

echo -n "Sisestage suvaline t채isarv: " #sisestatakse suvaline t채isarv
read arv #arv
jagan=$(($arv % 2)) #jagatakse antud arv kahega
if [ $jagan -eq 0 ] 
then
echo "Arv $arv on paaris" #kui arv on paaris v채ljastatakse see lause
else #kui on teisiti
echo "Arv $arv on paaritu" #kui arv on paaritu v채ljastatakse see lause
fi
